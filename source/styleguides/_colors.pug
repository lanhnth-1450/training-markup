//-------------------------------------------------------
//- Styleguides :: Colors
//-------------------------------------------------------

-
  var colors = [
    { key: '$white', color: '#fff' },
    { key: '$black', color: '#000' },
    { key: '$red', color: '#f00' },
    { key: '$blue', color: '#007bff' }
  ];

.row
  each val in colors
    .col-2
      .code-example
        .demo(style=`background-color: ${val.color}; width: 100%; height: 100px`)
        pre
          code
            | #{val.key}: #{val.color}
